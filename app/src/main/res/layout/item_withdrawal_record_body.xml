<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:padding="@dimen/space_12">

        <ImageView
            android:id="@+id/iv_withdrawal_record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_withdrawal_record" />

        <TextView
            android:id="@+id/tv_to_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_withdrawal_record"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_toEndOf="@+id/iv_withdrawal_record"
            android:text="零钱提现——到微信账户"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toStartOf="@+id/tv_withdrawal_amount"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_withdrawal_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/space_16"
            android:text="0.00"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_withdrawal_record"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_toEndOf="@+id/iv_withdrawal_record"
            android:text="4月28日 11:11"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_13" />

    </RelativeLayout>

</LinearLayout>