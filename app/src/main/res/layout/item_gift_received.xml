<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_6"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:layout_marginTop="@dimen/space_6"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_12">

                <TextView
                    android:id="@+id/tv_receive_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="来自——XXX的礼物" />

                <TextView
                    android:id="@+id/tv_gift_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待处理"
                    android:textColor="@color/redOrange" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_8">

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@color/windowBackground"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_gifts_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_toEndOf="@+id/iv_picture"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="【爱意表达，粉红玫瑰鲜花】"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/tv_gifts_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_picture"
                    android:layout_alignStart="@+id/tv_gifts_name"
                    android:text="¥ 0.00"
                    android:textColor="@color/textColor1" />

                <Button
                    android:id="@+id/btn_examples_details"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_alignBottom="@+id/iv_picture"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_white_stroke_red_orange_radius_4dp"
                    android:text="转赠详情"
                    android:textColor="@color/redOrange"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_dividing"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_12"
                android:paddingRight="@dimen/space_12">


                <Button
                    android:id="@+id/btn_exchange_gift"
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:textColor="@color/redOrange"
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_marginBottom="@dimen/space_8"
                    android:layout_marginLeft="@dimen/space_12"
                    android:background="@drawable/bg_white_stroke_red_orange_radius_16dp"
                    android:text="换礼物" />

                <Button
                    android:id="@+id/btn_examples_of"
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="@dimen/space_8"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@drawable/bg_white_stroke_red_orange_radius_16dp"
                    android:text="转赠"
                    android:textColor="@color/redOrange" />

                <Button
                    android:id="@+id/btn_gather_together_red_packet"
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="@dimen/space_8"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@drawable/bg_white_stroke_red_orange_radius_16dp"
                    android:text="凑红包"
                    android:textColor="@color/redOrange" />

                <Button
                    android:id="@+id/btn_receive"
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="@dimen/space_8"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@drawable/bg_red_orange_radius_16dp"
                    android:text="接收"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>