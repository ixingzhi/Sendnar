<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/space_16"
        android:text="- 分享至微信 -"
        android:textColor="@color/textColor2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_click_color"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/space_16">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_share_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:layout_marginTop="@dimen/space_8"
                android:textColor="@color/textColor2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_circle_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_click_color"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/space_16">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_share_circle_friends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:layout_marginTop="@dimen/space_8"
                android:textColor="@color/textColor2" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/space_12"
        android:background="@color/redOrange"
        android:text="关闭"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>