<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_6"
    android:layout_marginLeft="@dimen/space_8"
    android:layout_marginRight="@dimen/space_8"
    android:layout_marginTop="@dimen/space_6"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp">

    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/swipe_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentView="@+id/content"
        app:rightMenuView="@+id/right">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_8"
                android:src="@drawable/ic_shopping_cart_switch" />

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_marginTop="@dimen/space_8"
                android:layout_toEndOf="@+id/iv_select"
                android:background="@color/windowBackground"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_gifts_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_picture"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:layout_marginTop="@dimen/space_12"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/iv_picture"
                android:text="【爱意表达】粉红玫瑰花粉红玫瑰花" />

            <TextView
                android:id="@+id/tv_gifts_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_picture"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_toEndOf="@+id/iv_picture"
                android:text="¥0.00"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_picture"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_8"
                android:layout_marginTop="@dimen/space_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subtract"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_add_subtract_number"
                    android:gravity="center"
                    android:text="—"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_add_subtract_number"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_add_subtract_number"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/right"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/red"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>

</android.support.v7.widget.CardView>