<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <com.shichuang.sendnar.widget.RxTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tb_title="意见反馈">

        </com.shichuang.sendnar.widget.RxTitleBar>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_12"
                android:text="请填写您的意见或建议"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_opinion_advice"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="@dimen/space_12"
                android:gravity="top"
                android:layout_marginRight="@dimen/space_12"
                android:padding="@dimen/space_12"
                android:background="@drawable/bg_input_feedback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_12"
                android:text="请填写您的联系方式"
                android:layout_marginTop="@dimen/space_12"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12"
                android:padding="@dimen/space_12"
                android:background="@drawable/bg_input_feedback" />

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_35"
                android:background="@drawable/ic_btn_gradual_change_orange"
                android:text="提交"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>