<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_classify_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_16">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@color/windowBackground"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_gifts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginTop="@dimen/space_16"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="【爱意表达】粉红玫瑰鲜花"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_8">

        <TextView
            android:id="@+id/tv_gifts_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/space_8"
            android:background="@color/gray" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/space_8"
            android:src="@drawable/ic_shopping_cart"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_wechat_gift_giving"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_gradual_change_orange"
            android:text="微信送礼"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <Button
            android:id="@+id/btn_direct_purchasing"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_gradual_change_black"
            android:text="送给自己"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <Button
            android:id="@+id/btn_exchange_gift"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_gradual_change_orange"
            android:text="换礼物"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>