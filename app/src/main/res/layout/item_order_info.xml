<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@color/white"
    android:padding="@dimen/space_8">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_gifts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_8"
        android:layout_toEndOf="@+id/iv_picture"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="【爱意表达，粉红玫瑰鲜花】"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_gifts_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_picture"
        android:layout_marginBottom="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_toEndOf="@+id/iv_picture"
        android:text="¥0.00"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_return_goods"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/iv_picture"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_btn_return_goods"
        android:paddingLeft="@dimen/space_4"
        android:paddingRight="@dimen/space_4"
        android:text="退换"
        android:textColor="@color/textColor2"
        android:textSize="@dimen/text_size_13"
        android:visibility="visible" />

</RelativeLayout>