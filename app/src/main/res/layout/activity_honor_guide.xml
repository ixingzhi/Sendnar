<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <com.shichuang.sendnar.widget.RxTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tb_title="勋章指南">

        </com.shichuang.sendnar.widget.RxTitleBar>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_35"
        android:text="勋章指南"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20" />

    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/space_8"
        android:background="#FCB702" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_35"
        android:text="01"
        android:textColor="@color/textColor2"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:text="勋章对应购买扶贫众筹商品的慈善贡献值积累：\n1元对应1个贡献值，当达到相应数额的慈善值，\n平台会为您开启相应的勋章。"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_35"
        android:text="02"
        android:textColor="@color/textColor2"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:text="每一块慈善勋章开启的同时，\n我们会为您寄送相应的实物勋章。"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />


</LinearLayout>