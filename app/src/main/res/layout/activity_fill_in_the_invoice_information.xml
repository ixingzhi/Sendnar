<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <com.shichuang.sendnar.widget.RxTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tb_right_title="发票须知"
            app:tb_title="填写发票信息">

        </com.shichuang.sendnar.widget.RxTitleBar>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/space_12">

        <TextView
            android:id="@+id/tv_invoice_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票类型"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <Button
            android:id="@+id/btn_commercial_invoice"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/tv_invoice_type"
            android:background="@drawable/bg_btn_invoice"
            android:layout_marginTop="@dimen/space_8"
            android:textColor="@drawable/invoice_type_txt"
            android:text="普通发票" />

        <Button
            android:id="@+id/btn_commercial_electronic_invoice"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/btn_commercial_invoice"
            android:background="@drawable/bg_btn_invoice"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_toEndOf="@+id/btn_commercial_invoice"
            android:textColor="@drawable/invoice_type_txt"
            android:text="电子普通发票" />

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_8"/>

</LinearLayout>