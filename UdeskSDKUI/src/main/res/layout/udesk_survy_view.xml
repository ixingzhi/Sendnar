<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="335dp"
    android:background="@color/udesk_color_bg_white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/udesk_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="left|center"
        android:textColor="#333333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/udesk_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/udesk_title"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:textColor="@color/udesk_color_im_text_left1"
        android:textSize="@dimen/udesk_sp16" />

    <ListView
        android:id="@+id/udesk_list_choice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/udesk_survy_bottom"
        android:layout_below="@+id/udesk_desc"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />


    <RelativeLayout
        android:id="@+id/udesk_survy_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/udesk_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/udesk_ok"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/udesk_cancel"
            android:textColor="#333333"
            android:textSize="@dimen/udesk_sp15" />


        <TextView
            android:id="@+id/udesk_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/udesk_sure"
            android:textColor="#007AFF"
            android:textSize="@dimen/udesk_sp15" />
    </RelativeLayout>

</RelativeLayout>